<aura:component controller="AccountRecordCreation" implements="flexipage:availableForAllPageTypes">
    <aura:attribute name="accobj" type="Account" default="{'sObjectType':'Account',
                                                          'Name':'',
                                                          'Phone':'',
                                                          'Type':'',
                                                          'Industry':'',
                                                          'Website':''}"/>

    
     <p class="slds-box slds-text-heading_small">
         
    <lightning:icon iconName="standard:account" alternativeText="Account" title="Account" />
    Account</p>
    
    <lightning:input aura:id="field" value="{!v.accobj.Name}" label="Name" name="name" placeholder="Name" required="true" />
    <lightning:input aura:id="field" value="{!v.accobj.Phone}" label="Phone" name="Phone" placeholder="Phone"  />
    <lightning:select aura:id="field" value="{!v.accobj.Type}" label="Type" >
        <option value="">--None--</option>
        <option value="Prospect">Prospect</option>
        <option value="Customer-Direct">Customer-Direct</option>
        <option value="Customer-Channel">Customer-Channel</option>
        <option value="Customer Partner/Reseller">Customer Partner/Reseller</option>
        <option value="Installation Partner">Installation Partner</option>
        <option value="Technology Partner">Technology Partner</option>
        <option value="Other">Other</option>
    </lightning:select>
        <lightning:select aura:id="field" value="{!v.accobj.Industry}" label="Industry" name="Industry" >
        <option value="">--None--</option>
        <option value="Agriculture">Agriculture</option>
        <option value="Banking">Banking</option>
        <option value="Biotechnology">Biotechnology</option>
        <option value="Chemicals">Chemicals</option>
        <option value="Communications">Communications</option>
        <option value="Construction">Construction</option>
        <option value="Other">Other</option>
    </lightning:select>
    <lightning:input aura:id="field" value="{!v.accobj.Website}" label="Website" name="Website" placeholder="Website"/>
    <br/>
    <lightning:button aura:id="submit" variant="Brand" type="submit" label="Save" onclick="{!c.onClick}" />
    

    
</aura:component>